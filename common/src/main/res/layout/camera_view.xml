<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

    </data>

    <merge>

        <FrameLayout
            android:id="@+id/fl_camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.camera.view.PreviewView
                android:id="@+id/mCameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />


            <pers.fz.mvvm.widget.gallery.impl.PhotoView
                android:id="@+id/photo_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:visibility="gone" />

            <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                android:id="@+id/video_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="gone" />
        </FrameLayout>

        <pers.fz.mvvm.widget.camera.CaptureLayout
            android:id="@+id/capture_layout"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />

        <pers.fz.mvvm.widget.customview.CirclePaddingImageView
            android:id="@+id/image_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_xxxxl"
            android:src="@drawable/ic_flash_off"
            app:borderWidth="0dp"
            app:borderFocusColor="@color/white"
            app:enablePressed="true"
            android:padding="@dimen/padding_l"
            app:layout_constraintStart_toStartOf="@+id/capture_layout"
            app:layout_constraintTop_toTopOf="@id/capture_layout"
            app:layout_constraintBottom_toBottomOf="@id/capture_layout" />

        <pers.fz.mvvm.widget.customview.CirclePaddingImageView
            android:id="@+id/image_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/horizontal_margin_xxxxl"
            android:src="@drawable/ic_camera"
            app:borderWidth="0dp"
            app:borderFocusColor="@color/white"
            app:enablePressed="true"
            android:padding="@dimen/padding_l"
            app:layout_constraintEnd_toEndOf="@+id/capture_layout"
            app:layout_constraintTop_toTopOf="@id/capture_layout"
            app:layout_constraintBottom_toBottomOf="@id/capture_layout"  />
        <pers.fz.mvvm.widget.camera.FocusView
            android:id="@+id/focusView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </merge>
</layout>