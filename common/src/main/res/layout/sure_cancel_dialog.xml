<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_16"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/padding_xxl"
        android:paddingBottom="@dimen/padding_xxl"
        android:paddingStart="@dimen/padding_xxxl"
        android:paddingEnd="@dimen/padding_xxxl"
        android:textColor="#000000"
        android:textSize="@dimen/font_size_xl"
        tools:text="tel:055165555744" />

    <View
        android:id="@+id/h_line"
        style="@style/h_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_xxl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_xl" />

        <View
            android:id="@+id/s_line"
            style="@style/s_line"/>

        <TextView
            android:id="@+id/dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/font_size_xl" />
    </LinearLayout>
</LinearLayout>
