<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>
        <variable
            name="isSelected"
            type="java.lang.Boolean" />

        <import type="android.view.View"/>

        <variable
            name="item"
            type="com.casic.titan.commonui.bean.CalendarData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cal_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_m"
        android:paddingBottom="@dimen/padding_m">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_l"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <View
            android:id="@+id/v_circle"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/vertical_margin_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day_number" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>